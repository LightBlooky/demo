<Window x:Class="demo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:demo"
        mc:Ignorable="d"
        Title="Program" Height="317" Width="438.5" WindowStartupLocation="CenterScreen">
    <Grid Background="#FFFFC4">
        <Image Source="emlog.png" HorizontalAlignment="Left" Height="152" Margin="10,10,0,0" VerticalAlignment="Top" Width="134"/>
        <TextBox x:Name="tb" HorizontalAlignment="Left" Height="24" Margin="24,150,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button Content="Добавить" Background="#BB93E2" Foreground="AliceBlue" HorizontalAlignment="Left" Height="39" Margin="39,201,0,0" VerticalAlignment="Top" Width="86" RenderTransformOrigin="0.407,0.487" Click="Button_Click"/>
        <DataGrid x:Name="grib" HorizontalAlignment="Left" Height="207" Margin="194,33,0,0" VerticalAlignment="Top" Width="191" Loaded="grib_Loaded">
            <DataGrid.Columns>
                <DataGridCheckBoxColumn Binding="{x:Null}" ClipboardContentBinding="{x:Null}" IsReadOnly="True"/>
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Window>
